      rel="stylesheet"
    />

    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.6.0/remixicon.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />

    <!-- Slick -->
    <link rel="stylesheet" href="../libs/slick/slick.css" type="text/css" />

    <!-- Main style file -->
    <link
      rel="stylesheet"
      href="../styles/dashboard.css"
      type="text/css"
    />
    <link rel="stylesheet" href="../public/styles/copy.css" />
  </head>
  <body>
    <!-- preloader -->
    <div class="preloader">
      <img src="../images/logo.svg" alt="logo" />
      <div class="preloader-icon"></div>
    </div>
    <!-- ./ preloader -->

    <!-- menu -->
    <div class="menu">
      <div class="menu-header">
        <a href="/dashboard" class="menu-header-logo">
          <img src="../images/logo.svg" alt="logo" />
          <span>Cryptex</span>
        </a>
        <a href="#" class="btn btn-sm menu-close-btn">
          <i class="bi bi-x"></i>
        </a>
      </div>
      <div class="menu-body">
        <div class="dropdown">
          <a
            href=""
            class="d-flex align-items-center"
            data-bs-toggle="dropdown"
          >
            <div class="avatar me-3">
              <img
                src="../images/author.png"
                class="rounded-circle"
                alt="image"
              />
            </div>
            <div>
              <div class="fw-bold" style="color: black">Bella</div>
              <small class="text-danger">unverified</small>
            </div>
          </a>
          <div class="dropdown-menu dropdown-menu-end">
            <a
              href="/login"
              class="dropdown-item d-flex align-items-center text-danger"
            >
              <i class="bi bi-box-arrow-right dropdown-item-icon"></i> Logout
            </a>
          </div>
        </div>
        <ul>
          <li class="menu-divider">Dashboard</li>
          <li>
            <a href="/dashboard">
              <span class="nav-link-icon">
                <i class="ri-dashboard-line"></i>
              </span>
              <span>Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/markets">
              <span class="nav-link-icon">
                <i class="bi bi-bar-chart"></i>
              </span>
              <span>Markets</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="nav-link-icon">
                <i class="ri-bank-card-line"></i>
              </span>
              <span>Funds</span>
            </a>
            <ul>
              <li>
                <a class="active" href="/deposit">Deposit</a>
              </li>
              <li>
                <a href="/transfer">Transfer</a>
              </li>
              <li>
                <a href="/withdraw">Withdraw</a>
              </li>
            </ul>
          </li>
          <li>
            <a href="/history">
              <span class="nav-link-icon">
                <i class="ri-history-line"></i>
              </span>
              <span>History</span>
            </a>
          </li>
          <li>
            <a href="/packages">
              <span class="nav-link-icon">
                <i class="ri-box-3-line"></i>
              </span>
              <span>Packages</span>
              <span class="badge bg-success ms-auto">New</span>
            </a>
          </li>
          <li>
            <a href="/signal">
              <span class="nav-link-icon">
                <i class="ri-signal-tower-fill"></i>
              </span>
              <span>Signal</span>
            </a>
          </li>
          <li>
            <a href="/aml-kyc">
              <span class="nav-link-icon">
                <i class="ri-pass-valid-line"></i>
              </span>
              <span>AML/KYC</span>
            </a>
          </li>
          <li class="menu-divider">Pages</li>
          <li>
            <a href="/settings">
              <span class="nav-link-icon">
                <i class="bi bi-gear"></i>
              </span>
              <span>Settings</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <!-- ./  menu -->

    <!-- layout-wrapper -->
    <div class="layout-wrapper">
      <!-- header -->
      <div class="header">
        <div class="menu-toggle-btn">
          <!-- Menu close button for mobile devices -->
          <a href="#">
            <i class="bi bi-list"></i>
          </a>
        </div>
        <!-- Logo -->
        <a href="#" class="logo">
          <img width="100" src="../images/logo.svg" alt="logo" />
        </a>
        <!-- ./ Logo -->
        <div class="page-title">Dashboard</div>
        <form class="search-form">
          <div class="input-group">
            <button
              class="btn btn-outline-light"
              type="button"
              id="button-addon1"
            >
              <i class="bi bi-search"></i>
            </button>
            <input
              type="text"
              class="form-control"
              placeholder="Search..."
              aria-label="Example text with button addon"
              aria-describedby="button-addon1"
            />
            <a href="#" class="btn btn-outline-light close-header-search-bar">
              <i class="bi bi-x"></i>
            </a>
          </div>
        </form>
        <div class="header-bar ms-auto">
          <ul class="navbar-nav justify-content-end">
            <li class="nav-item">
              <a href="#" class="nav-link" data-sidebar-target="#notifications">
                <i class="bi bi-bell icon-lg"></i>
              </a>
            </li>
            <li class="nav-item ms-3">
              <button
                class="btn btn-primary btn-icon"
                style="background-color: #3874ff; border: none"
              >
                Verified
              </button>
            </li>
          </ul>
        </div>
        <!-- Header mobile buttons -->
        <div class="header-mobile-buttons">
          <a href="#" class="search-bar-btn">
            <i class="bi bi-search"></i>
          </a>
          <a href="#" class="actions-btn">
            <i class="bi bi-three-dots"></i>
          </a>
        </div>
        <!-- ./ Header mobile buttons -->
      </div>
      <!-- ./ header -->

      <!-- content -->
      <div class="content">
        <div class="row flex-column-reverse flex-md-row">
          <div class="col-md-8">
            <div class="card mb-4">
              <div class="card-body">
                <h6 class="card-title mb-4">Deposit</h6>
                <div class="row">
                  <div>
                    <div class="mb-3">
                      <label class="form-label">Select Assets</label>
                      <div>
                        <select name="Select Assets" class="form-control" required>
                          <option value="">Choose Assets</option>
                          <option value="btc">BTC</option>
                          <option value="eth">ETH</option>
                          <option value="usdt">USDT</option>
                          <option value="usdc">USDC</option>
                        </select>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Amount</label>
                      <input
                        type="email"
                        class="form-control"
                        placeholder="enter amount"
                        required
                      />
                    </div>
                    <p class="text-muted">
                      <i class="ri-information-fill text-success"></i>
                      Deposits will appear in your account after payments are
                      successfully made and confirmed by our team
                    </p>
                  </div>
                  <div>
                    <button
                      type="button"
                      class="btn btn-primary"
                      data-bs-toggle="modal"
                      data-bs-target="#exampleModal"
                      style="background-color: #3874ff; border: none"
                    >
                      Make Payment
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <div
              class="modal"
              id="exampleModal"
              tabindex="1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="card-title">Payment Confirmation</h4>
                  </div>
                  <div class="modal-body">
                    <p>
                      Your Order no. CXCA893GrSw5K has been placed successfully.
                    </p>
                    <p>
                      Please send 1000 USDT ($1000) to the address below. The
                      balance will appear in your account only after transaction
                      gets confirmed by our team.
                    </p>
                    <h4 class="display-9">
                      Payment to the following USDT Wallet Address
                    </h4>
                    <div
                      class="align-items-center d-flex justify-content-left text-left"
                    >
                      <img src="../images/scan.jpg" width="200px" alt="scan" />
                      <div>
                        <label class="form-label">Amount</label>
                        <input
                          type="email"
                          class="form-control"
                          placeholder="enter amount"
                          style="width: 500px;"
                        />
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer justify-content-between">
                    <div>
                      <button type="button" class="btn btn-primary">
                        Confirm
                      </button>
                      <button
                        type="button"
                        class="btn btn-danger ms-3"
                        data-bs-dismiss="modal"
                      >
                        Cancel
                      </button>
                    </div>
                    <div style="display: block">
                      <p class="text-muted">
                        <i class="ri-information-fill text-success"></i>
                        Kindly ensure you select the appropriate networks for
                        deposit.
                      </p>
                      <p class="text-danger">
                        <i class="ri-information-fill"></i>
                        Kindly ensure you send exact amount as added in your
                        deposit
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ./ content -->

      <!-- content-footer -->
      <footer class="content-footer">
        <div>
          <strong>Cryptex</strong> ©
          <script>
            document.write(new Date().getFullYear());
          </script>
        </div>
        <div>
          <nav class="nav gap-4">
            <a href="#" class="nav-link">Cryptex</a>
            <a href="#" class="nav-link">About Us</a>
            <a href="#" class="nav-link">Licenses</a>
          </nav>
        </div>
      </footer>
      <!-- ./ content-footer -->
    </div>
    <!-- ./ layout-wrapper -->

