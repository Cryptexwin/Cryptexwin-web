    <script src="../libs/slick/slick.min.js"></script>

    <!-- Examples -->
    <script src="../js/examples/dashboard.js"></script>

    <!-- Main Javascript file -->
    <script src="../scripts/dashboard.js"></script>
    <script src="../scripts/copy.js"></script>
  </body>
</html>
